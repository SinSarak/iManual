@using iManual.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Login - iManaul</title>

    <!-- Bootstrap -->
    <link href="~/Scripts/Plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Scripts/Plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Scripts/Plugins/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Scripts/Plugins/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Scripts/Plugins/customize/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        <h1>IManual</h1>
                        <div>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div>
                            <button class="btn btn-default submit">Log in</button>
                            @*<a class="reset_pass" href="#">Lost your password?</a>*@
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>

                        <div class="clearfix"></div>
                        
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>
                            </div>
                        </div>
                    }
                </section>
            </div>   
        </div>
    </div>
</body>
</html>
