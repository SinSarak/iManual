@model iManual.Models.ViewModels.SubCategoryViewModels.CreateSubCategoryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SubCategory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="ccontrol-label col-md-2">Name</label>
            <div class="col-md-10">
                <input type="text" name="Name" class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="ccontrol-label col-md-2">Name</label>
            <div class="col-md-10">
                <select name="MainCategoryId" class="form-control">
                    @foreach (var main in Model.MainCategorys)
                    {
                        <option value="@main.Id">@main.Name</option>
                    }
                </select>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
