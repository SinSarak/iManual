@model iManual.Models.ViewModels.MainClaimViewModels.CreateMainClaimViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MainClaim</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input type="text" name="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Sub Claim</label>
            <div class="col-md-10">
                <select class="form-control" name="SubClaimId">
                    <option value="0">--- None ---</option>
                    @foreach (var sub in Model.MainClaims)
                    {
                        <option value="@sub.Id">@sub.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
